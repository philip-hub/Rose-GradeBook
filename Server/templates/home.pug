html(lang="en")
  head
    // Required meta tags
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1, shrink-to-fit=no")

    // Bootstrap CSS
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC' crossorigin='anonymous')
    link(rel="stylesheet", href="/style/major.css")
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Academic Fields

  body
    .search-bar-container
      form(action="/classsearch", method="post")
        input(type="text", name="search" id="search" placeholder="Search for a class...")
        input(type="submit", value="Search")
    
    h4 Average Rose-Hulman Student GPA: #{rgpa}
    h5 Freshman GPA: #{fgpa} Sophomore GPA: #{spgpa} Junior GPA: #{jgpa} Senior GPA: #{sngpa}

    .grid-container
      form(action="/Biochemistry", method="post")
        input(type="submit", value="Biochemistry "+bcgpa)

      form(action="/Biochemistry-and-Molecular-Biology", method="post")
        input(type="submit", value="Biochemistry and Molecular Biology "+bcmgpa)

      form(action="/Biology", method="post")
        input(type="submit", value="Biology " +bgpa)

      form(action="/Biomathematics", method="post")
        input(type="submit", value="Biomathematics "+bmgpa)

      form(action="/Biomedical-Engineering", method="post")
        input(type="submit", value="Biomedical Engineering" +begpa)

      form(action="/Chemical-Engineering", method="post")
        input(type="submit", value="Chemical Engineering" +chemegpa)

      form(action="/Chemistry", method="post")
        input(type="submit", value="Chemistry "+chemgpa)

      form(action="/Civil-Engineering", method="post")
        input(type="submit", value="Civil Engineering "+cegpa)

      form(action="/Computational-Science", method="post")
        input(type="submit", value="Computational Science "+cpsgpa)

      form(action="/Computer-Engineering", method="post")
        input(type="submit", value="Computer Engineering "+cpegpa)

      form(action="/Computer-Science", method="post")
        input(type="submit", value="Computer Science "+csgpa)

      form(action="/Data-Science", method="post")
        input(type="submit", value="Data Science "+dsgpa)

      form(action="/Electrical-Engineering", method="post")
        input(type="submit", value="Electrical Engineering "+eegpa)

      form(action="/Engineering-Design", method="post")
        input(type="submit", value="Engineering Design "+edgpa)

      form(action="/International-Studies", method="post")
        input(type="submit", value="International Studies "+isgpa)

      form(action="/Mathematics", method="post")
        input(type="submit", value="Mathematics "+mgpa)

      form(action="/Mechanical-Engineering", method="post")
        input(type="submit", value="Mechanical Engineering "+megpa)

      form(action="/Optical-Engineering", method="post")
        input(type="submit", value="Optical Engineering "+opgpa)

      form(action="/Physics", method="post")
        input(type="submit", value="Physics "+phgpa)

      form(action="/Software-Engineering", method="post")
        input(type="submit", value="Software Engineering "+segpa)
      

